<MainScreen>:
    name:name

    GridLayout:
        cols:1
        size: root.width,root.height
        GridLayout:
            cols:1
            Label:
                text:"Welcome to BMI calculator "
            Label:
                text:"Please enter your name"
                size_hint_y:None
                height:50
                size_hint_x:None
                width:900
                
            TextInput:
                id:name
                multiline:False
                size_hint_y:None
                height:50
                size_hint_x:None
                width:900
            
        Button:
            text:"Start"
			font_size:40
            size_hint_y:None
            height:50
            size_hint_x:None
            width:900
            on_press:root.press()

