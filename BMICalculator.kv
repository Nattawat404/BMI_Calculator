#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	BMIScreen:
<MainScreen>:
	name:"main_screen"
	FloatLayout:
		Button:
			on_release: app.root.current = "BMI"
			text: "BMI" 		
<Button>:
	font_size: 40

<GenderScreen>:

<AgeScreen>:

<HightScreen>:
	display: height
	display: x
	display: fl
	FloatLayout:
		Label:
			font_size: 18
			pos_hint:{"x":-0.25,"y":0}
			text:u"How tall are you in meters?"
			
		TextInput:
			text:""
			id: height
			multiline:False
			font_size: 60
			halign: 'center'
			pos_hint:{"x":0.15,"y":0.1}
			size_hint:0.2,0.3


<WeightScreen>:
	display: weight
	display: x
	display: fl
	FloatLayout:
		Label:
			font_size: 18
			pos_hint:{"x":0.25,"y":0}
			text:u'What\'s your weight in kg?'
		
		TextInput:
			text:""
			id: weight
			multiline:False
			font_size: 60
			halign: 'center'
			pos_hint:{"x":0.65,"y":0.1}
			size_hint:0.2,0.3
			
