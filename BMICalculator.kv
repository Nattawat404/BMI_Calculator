<Calculator>:
    rows: 4

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            text: 'Enter your weight (kg):'

        TextInput:
            id: weight
            multiline: False

        Label:
            text: 'Enter your height (cm):'

        TextInput:
            id: height
            multiline: False

        Button:
            text: 'Calculate BMI'
            on_press: root.calculate_bmi(weight.text, height.text)

        Label:
            id: bmi_result
            text: ''